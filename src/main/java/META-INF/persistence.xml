<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="name_PU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<properties>
	  	    <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/lsea_lab"/>
		    <property name="javax.persistence.jdbc.user" value="lab"/>
		    <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
		    <property name="javax.persistence.jdbc.password" value="lab"/>
		    <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
 		</properties>
	</persistence-unit>
</persistence>